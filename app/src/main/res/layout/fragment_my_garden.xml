<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:background="@drawable/my_garden_bg"
    tools:context=".fragment.MyGardenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/garden_plant_collection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/plant_collection"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/garden_my_garden_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/my_garden"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="@id/garden_plant_collection_text"
        app:layout_constraintRight_toRightOf="@id/garden_plant_collection_text"
        app:layout_constraintTop_toTopOf="@id/garden_plant_collection_text" />

    <ListView
        android:id="@+id/lv_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garden_my_garden_text" />

</androidx.constraintlayout.widget.ConstraintLayout>