<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tab_content_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/explore"
        app:layout_constraintBottom_toTopOf="@id/tab_content_text"
        app:layout_constraintLeft_toLeftOf="@id/tab_content_text"
        app:layout_constraintRight_toRightOf="@id/tab_content_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tab_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_explore"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>